#!bin/bash
# Copyright (C) 2019 Muhammad Fadlyas! (@Mhmmdfas)
# For Xiaomi Redmi 4A/5A
# Circle CI/CD
echo "Let's Start It!"
git clone -j32 https://github.com/crDroidMod/android_prebuilts_clang_host_linux-x86_clang-5900059 -b 9.0 --depth=1 clang
git clone -j32 https://android.googlesource.com/platform/prebuilts/gcc/linux-x86/aarch64/aarch64-linux-android-4.9 -b android-9.0.0_r49 --depth=1 aarch64
git clone -j32 https://android.googlesource.com/platform/prebuilts/gcc/linux-x86/arm/arm-linux-androideabi-4.9 -b android-9.0.0_r49 --depth=1 arm32
git clone -j32 https://github.com/Mhmmdfas/scripts-build --depth=1 anykernel3 && rm -rf anykernel3/anykernel-rolex/LI* && rm -rf anykernel3/anykernel-rolex/READ*
echo "clone succesfully"
CT="$(pwd)/clang/bin/clang"
GCC="$(pwd)/aarch64/bin/aarch64-linux-android-"
GCC32="$(pwd)/arm32/bin/arm-linux-androideabi-"
IMAGE=$(pwd)/out/arch/arm64/boot/Image.gz-dtb
MACHINE="Circle CI/CD"
DEVICES="Xiaomi Redmi 4A/5A"
NUM=$(echo $CIRCLE_BUILD_NUM | cut -c 1-2)
TANGGAL=$(TZ=Asia/Jakarta date +'%d%m%y')
START=$(date +"%s")
export ARCH=arm64
export KBUILD_BUILD_USER=Mhmmdfas
export KBUILD_BUILD_HOST=CI-${NUM}
export USE_CCACHE=1
export CACHE_DIR=~/.ccache
git config --global user.email "fadlyardhians@outlook.com"
git config --global user.name "Mhmmdfas"
# send sticker
function sticker() {
        curl -s -X POST "https://api.telegram.org/bot${token}/sendSticker" \
                        -d sticker="CAADBQADJAEAAn1Cwy6oClWEDGYAAQEWBA" \
                        -d chat_id=${chat_id}
}
# Send status
function sendinfo() {
        curl -s -X POST "https://api.telegram.org/bot${token}/sendMessage" \
                        -d chat_id=${chat_id} \
                        -d "disable_web_page_preview=true" \
                        -d "parse_mode=html" \
                        -d text="<b>Greenforce CI new build is up</b>!!%0AStarted on <code>${MACHINE}</code> %0AFor devices <code>${DEVICES}</code> %0AFrom branch: <code>$(git rev-parse --abbrev-ref HEAD)</code> %0ALatest Commit <code>$(git log --pretty=format:'"%h : %s"' -1)</code>%0ACompiler: <code>$(${CT} --version | head -n 1 | perl -pe 's/\(.*?\)//gs' | sed -e 's/  */ /g')</code>%0ACompiled with: <code>$(${GCC}gcc --version | head -n 1)</code>%0ACompiled with: <code>$(${GCC32}gcc --version | head -n 1)</code>%0AStarted on: <code>$(TZ=Asia/Jakarta date)</code>"
}
# Send private status
function sendpriv() {
        curl -s -X POST "https://api.telegram.org/bot${token}/sendMessage" \
                        -d chat_id=784548477 \
                        -d "disable_web_page_preview=true" \
                        -d "parse_mode=html" \
                        -d text="Greenforce new build for Rolex!%0ACompile Started At [ <code>$(TZ=Asia/Jakarta date)</code> ]%0ALink CI <a href='${CIRCLE_BUILD_URL}'>here</a> | #${NUM}."
}
# Push Kernel
function push() {
        cd cd anykernel3/anykernel-rolex
	ZIP=$(echo *.zip)
	curl -F document=@$ZIP "https://api.telegram.org/bot${token}/sendDocument" \
			-F chat_id="${chat_id}" \
			-F "disable_web_page_preview=true" \
			-F "parse_mode=html" \
			-F caption="Build took $(($DIFF / 60)) minute(s) and $(($DIFF % 60)) second(s). <b>For Xiaomi Redmi 4A</b> [ <code>$UTS</code> ]"
}
# Fin Error
function finerr() {
        paste
        curl -s -X POST "https://api.telegram.org/bot${token}/sendMessage" \
			-d chat_id="${chat_id}" \
			-d "disable_web_page_preview=true" \
			-d "parse_mode=markdown" \
			-d text="Build throw an error(s)."
        exit 1
}
# Compile kernel
function compile() {
        make -s -C $(pwd) O=out rolex_defconfig
        make -s -C $(pwd) CC=${CT} \
                          CROSS_COMPILE=${GCC} \
                          CROSS_COMPILE_ARM32=${GCC32} \
                          O=out -j60 -l50 2>&1| tee build.log
        UTS=$(cat out/include/generated/compile.h | grep UTS_VERSION | cut -d '"' -f2)
            if ! [ -a $IMAGE ]; then
                finerr
                exit 1
            fi
        cp out/arch/arm64/boot/Image.gz-dtb cd anykernel3/anykernel-rolex/zImage
        paste
}
# Zipping
function zipping() {
    cd anykernel3/anykernel-rolex || exit 1
    zip -r9 Greenforce-pure-rolex-"${TANGGAL}".zip *
    cd
}
rm -rf out
sticker
sendinfo
sendpriv
compile
zipping
END=$(date +"%s")
DIFF=$(($END - $START))
push
